@using Microsoft.AspNetCore.Components
@using SuperPlan.Models

<div class="modal" style="display: @(Show ? "block" : "none")">
    <div class="modal-content">
        <h2>@Title</h2>

        <div>
            <label for="description">Description:</label>
            <input type="text" id="description" @bind="@Expense.Description" />
        </div>
        
        <div>
            <label for="amount">Amount:</label>
            <input type="number" id="amount" @bind="@Expense.Amount" />
        </div>
        
        <div>
            <label for="date">Date:</label>
            <input type="date" id="date" @bind="@Expense.Date" />
        </div>
        
        <div>
            <label for="paymentMethod">Payment Method:</label>
            <input type="text" id="paymentMethod" @bind="@Expense.PaymentMethod" />
        </div>
        
        <div>
            <label for="category">Category:</label>
            <input type="text" id="category" @bind="@Expense.Category" />
        </div>
        
        <div>
            <label for="month">Month:</label>
            <input type="number" id="month" @bind="@Expense.Month" />
        </div>

        <div class="modal-buttons">
            <button @onclick="OnSave">Save</button>
            <button @onclick="OnCancel">Cancel</button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool Show { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public Expense Expense { get; set; }

    [Parameter]
    public EventCallback OnSave { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }
}
